 Simple Inheritance
#code 1
class Vehicle{
    void start(){
        System.out.println("Vehicle Start");
    }
}
class Bike extends Vehicle{
    void ride(){
       System.out.println("Bike running"); 
    }
}



public class Main
{
	public static void main(String[] args) {
	    Bike b = new Bike();
	    b.start();
	    b.ride();
	}
}

multiple Inheritance
#code 2
class Vehicle{
    void start(){
        System.out.println("Vehicle Start");
    }
}
    class Bike extends Vehicle{
    void ride(){
       System.out.println("Bike running"); 
    }
}

class speedometer extends Bike {
    void speed() {
        System.out.println("200km/hr");
    }
}

public class Main{
	public static void main(String[] args) {
	    speedometer s = new speedometer();
	    s.start();
	    s.ride();
	    s.speed();
	}
}


Hierarichal inheritance 
#Code 3:-
class Vehicle { 
    void start() {
        System.out.println("Vehicle Starts");
    }
}
class Bike extends Vehicle { 
    void drink() {
        System.out.println("Bike running");
    }
}
class Car extends Vehicle {
    void drive() {
        System.out.println("Car Running");
    }
}
public class Main
{
	public static void main(String[] args) {
	    Bike b = new Bike();
	    Car c = new Car();
	    
	    b.start();
	    b.drink();
	    c.start();
	    c.drive();
	    // c.drink();
	}
}
